{
  "name": "ilamage",
  "title": "iLamage",
  "version": "1.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/LegnaOS/iLamage.git"
  },
  "scripts": {
    "dev": "vue-cli-service electron:serve",
    "build": "vue-cli-service electron:build -mwl",
    "build:mac": "vue-cli-service electron:build --mac",
    "build:windows": "vue-cli-service electron:build --windows",
    "build:linux": "vue-cli-service electron:build --linux",
    "lint": "vue-cli-service lint",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps"
  },
  "main": "background.js",
  "dependencies": {
    "@electron/remote": "^2.1.3",
    "@webav/av-cliper": "^1.2.7",
    "adm-zip": "^0.5.16",
    "core-js": "^3.38.1",
    "electron-localstorage": "^1.0.5",
    "element-ui": "^2.15.14",
    "fs-extra": "^11.2.0",
    "lottie-web": "^5.13.0",
    "normalize.css": "^8.0.1",
    "pngjs": "^7.0.0",
    "svgaplayerweb": "^2.3.2",
    "vue": "^2.7.16",
    "vue-async-computed": "^3.9.0",
    "vue-i18n": "^8.28.2",
    "vue-router": "^3.6.5",
    "vuex": "^3.6.2"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/eslint-parser": "^7.25.1",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.25.4",
    "@vue/cli-plugin-babel": "~5.0.8",
    "@vue/cli-plugin-eslint": "~5.0.8",
    "@vue/cli-service": "~5.0.8",
    "electron": "^22.3.27",
    "eslint": "^8.57.1",
    "eslint-plugin-vue": "^9.28.0",
    "sass": "^1.79.5",
    "sass-loader": "^16.0.3",
    "vue-cli-plugin-electron-builder": "^2.1.1",
    "vue-template-compiler": "^2.7.16",
    "webpack": "^5.95.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {
      "no-console": "off",
      "no-debugger": "off",
      "no-unused-vars": "warn",
      "no-undef": "warn",
      "no-redeclare": "warn",
      "no-empty": "warn",
      "no-useless-escape": "warn",
      "no-mixed-spaces-and-tabs": "warn",
      "no-case-declarations": "off",
      "vue/multi-word-component-names": "off"
    },
    "parserOptions": {
      "parser": "@babel/eslint-parser",
      "requireConfigFile": false
    },
    "globals": {
      "_": "readonly"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "Chrome >= 87",
    "Electron >= 11"
  ]
}
